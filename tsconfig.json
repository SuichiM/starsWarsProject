{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "sourceMap": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src", "webpack.config.ts", "*.ts", "*.tsx"]
}
